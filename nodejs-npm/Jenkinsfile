@Library('blackduck-logs-publisher') _

pipeline {
    agent { label 'mac-sh' }

    stages {
        stage("Build") {
            steps {
                script {
                    echo "JOB_NAME: ${env.JOB_NAME}"

                    dir('nodejs-npm') {
                        sh 'node --version'
                        sh 'npm --version'
                        sh 'npm install'
                    }
                }
            }
        }

        stage("blackduck-security-scan") {
            steps {
                script {
                    dir('nodejs-npm') {
                        def projectName = env.JOB_NAME.split('/')[0]
                        echo "DETECT_PROJECT_NAME will be set to: ${projectName}"

                        withEnv(["DETECT_PROJECT_NAME=${projectName}"]) {
                            echo "Workspace is ${WORKSPACE}"
                            security_scan blackducksca_reports_sarif_create: true,
                                         blackducksca_reports_sarif_groupSCAIssues: true, blackducksca_reports_sarif_severities: 'CRITICAL,HIGH', 
                                         detect_args: 'detect.source.path=${WORKSPACE}/nodejs-npm',   
                                         blackducksca_waitForScan: true, product: 'blackducksca' 
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            pushJenkinsLogsToGitHub([
                githubOrg: 'blackducksca-jenkins-samples',
                repoName: 'sarif-generation',
                retentionCount: 5
            ])
        }
    }
}
